                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IdiomaActivity"
            android:label="@string/title_activity_idioma"
            android:theme="@style/AppTheme.NoActionBar">
